<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Workflow Editor - SaaSBackend</title>
  <script src="https://cdn.tailwindcss.com"></script>
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/@tabler/icons-webfont@latest/dist/tabler-icons.min.css">
  <script defer src="https://cdn.jsdelivr.net/npm/alpinejs@3.x.x/dist/cdn.min.js"></script>
  <style>
    [x-cloak] { display: none !important; }
    .node-connector { width: 2px; @apply bg-gray-200 h-8 mx-auto; }
  </style>
</head>
<body class="bg-gray-50 min-h-screen pb-20">
  <div x-data="workflowEditor()" class="max-w-4xl mx-auto p-6" x-cloak>
    <!-- List View -->
    <template x-if="view === 'list'">
      <div>
        <div class="flex justify-between items-center mb-8">
          <div>
            <h1 class="text-2xl font-bold text-gray-900">Workflows</h1>
            <p class="text-sm text-gray-500">Automate your backend logic with stacked nodes.</p>
          </div>
          <button @click="createNew()" class="px-4 py-2 bg-indigo-600 text-white rounded-lg text-sm font-medium hover:bg-indigo-700 flex items-center gap-2">
            <i class="ti ti-plus"></i> New Workflow
          </button>
        </div>

        <div class="grid grid-cols-1 gap-4">
          <template x-for="wf in workflows" :key="wf._id">
            <div class="bg-white p-5 rounded-xl border border-gray-200 shadow-sm hover:shadow-md transition-all flex items-center justify-between">
              <div class="flex items-center gap-4">
                <div class="p-3 bg-indigo-50 text-indigo-600 rounded-lg">
                  <i class="ti ti-robot text-xl"></i>
                </div>
                <div>
                  <h3 class="font-bold text-gray-900" x-text="wf.name"></h3>
                  <div class="flex items-center gap-2 text-xs text-gray-400">
                    <span x-text="wf.nodes?.length || 0"></span> nodes
                    <span>â€¢</span>
                    <span :class="wf.status === 'active' ? 'text-green-600' : 'text-gray-400'" x-text="wf.status.toUpperCase()"></span>
                  </div>
                </div>
              </div>
              <div class="flex items-center gap-2">
                <button @click="editWorkflow(wf)" class="px-3 py-1.5 bg-gray-50 text-gray-600 rounded-lg text-xs font-semibold hover:bg-gray-100">EDIT</button>
                <button @click="deleteWorkflow(wf._id)" class="p-2 text-gray-400 hover:text-red-500"><i class="ti ti-trash"></i></button>
              </div>
            </div>
          </template>
        </div>
      </div>
    </template>

    <!-- Editor View -->
    <template x-if="view === 'editor'">
      <div>
        <div class="flex justify-between items-center mb-8">
          <div class="flex items-center gap-4">
            <button @click="view = 'list'" class="p-2 hover:bg-gray-100 rounded-lg text-gray-400">
              <i class="ti ti-list text-xl"></i>
            </button>
            <div>
              <input type="text" x-model="workflow.name" class="text-2xl font-bold bg-transparent border-none focus:ring-0 p-0 w-64" placeholder="Workflow Name">
              <div class="flex items-center gap-2">
                <p class="text-sm text-gray-500">Status: 
                  <select x-model="workflow.status" class="bg-transparent border-none text-xs p-0 focus:ring-0 cursor-pointer" :class="workflow.status === 'active' ? 'text-green-600 font-bold' : 'text-gray-400'">
                    <option value="inactive">INACTIVE</option>
                    <option value="active">ACTIVE</option>
                  </select>
                </p>
                <template x-if="workflow._id">
                  <button @click="showRuns = !showRuns" class="text-[10px] font-bold text-indigo-600 hover:underline uppercase">
                    <span x-text="showRuns ? 'Hide Runs' : 'Show Runs'"></span>
                  </button>
                </template>
              </div>
            </div>
          </div>
          <div class="flex items-center gap-3">
            <button @click="testWorkflow()" class="px-4 py-2 bg-white border border-gray-200 rounded-lg text-sm font-medium hover:bg-gray-50 flex items-center gap-2">
              <i class="ti ti-player-play"></i> Test
            </button>
            <button @click="saveWorkflow()" class="px-4 py-2 bg-indigo-600 text-white rounded-lg text-sm font-medium hover:bg-indigo-700 flex items-center gap-2">
              <i class="ti ti-device-floppy"></i> Save
            </button>
          </div>
        </div>

        <!-- Runs History Section -->
        <div x-show="showRuns" x-transition class="bg-white rounded-xl border border-gray-200 shadow-sm mb-8 overflow-hidden">
          <div class="p-4 border-b border-gray-100 bg-gray-50 flex justify-between items-center">
            <h3 class="text-sm font-bold text-gray-700 uppercase">Execution History</h3>
            <button @click="loadRuns()" class="text-xs text-indigo-600 hover:text-indigo-700"><i class="ti ti-refresh"></i> Refresh</button>
          </div>
          <div class="max-h-64 overflow-y-auto">
            <table class="w-full text-left text-xs">
              <thead class="bg-gray-50 text-gray-400 uppercase font-bold sticky top-0">
                <tr>
                  <th class="px-4 py-2">Date</th>
                  <th class="px-4 py-2">Status</th>
                  <th class="px-4 py-2">Duration</th>
                  <th class="px-4 py-2">Nodes</th>
                  <th class="px-4 py-2">Action</th>
                </tr>
              </thead>
              <tbody class="divide-y divide-gray-100">
                <template x-for="run in runs" :key="run._id">
                  <tr class="hover:bg-gray-50">
                    <td class="px-4 py-2 text-gray-500" x-text="new Date(run.executedAt).toLocaleString()"></td>
                    <td class="px-4 py-2">
                      <span :class="{
                        'text-green-600 bg-green-50': run.status === 'completed',
                        'text-red-600 bg-red-50': run.status === 'failed',
                        'text-blue-600 bg-blue-50': run.status === 'running'
                      }" class="px-2 py-0.5 rounded text-[10px] font-bold" x-text="run.status.toUpperCase()"></span>
                    </td>
                    <td class="px-4 py-2 text-gray-500" x-text="run.duration + 'ms'"></td>
                    <td class="px-4 py-2 text-gray-500" x-text="run.log?.length || 0"></td>
                    <td class="px-4 py-2">
                      <button @click="inspectRun(run)" class="text-indigo-600 hover:underline">Inspect</button>
                    </td>
                  </tr>
                </template>
                <template x-if="runs.length === 0">
                  <tr>
                    <td colspan="5" class="px-4 py-8 text-center text-gray-400">No execution history found</td>
                  </tr>
                </template>
              </tbody>
            </table>
          </div>
        </div>

        <!-- Run Inspector Modal -->
        <div x-show="inspectedRun" class="fixed inset-0 z-50 flex items-center justify-center p-4 bg-black/50" x-cloak>
          <div class="bg-white rounded-2xl shadow-2xl w-full max-w-2xl max-h-[80vh] overflow-hidden flex flex-col">
            <div class="p-4 border-b border-gray-100 flex justify-between items-center">
              <h3 class="font-bold text-gray-900">Run Details</h3>
              <button @click="inspectedRun = null" class="text-gray-400 hover:text-gray-600"><i class="ti ti-x"></i></button>
            </div>
            <div class="flex-1 overflow-y-auto p-6 space-y-6">
              <div class="grid grid-cols-2 gap-4">
                <div class="bg-gray-50 p-3 rounded-lg">
                  <span class="text-[10px] font-bold text-gray-400 uppercase block">Context Payload</span>
                  <pre class="text-[10px] font-mono mt-1 text-gray-600" x-text="JSON.stringify(inspectedRun?.context?.payload, null, 2)"></pre>
                </div>
                <div class="bg-gray-50 p-3 rounded-lg">
                  <span class="text-[10px] font-bold text-gray-400 uppercase block">Result</span>
                  <pre class="text-[10px] font-mono mt-1 text-gray-600" x-text="JSON.stringify(inspectedRun?.context?.lastNode, null, 2)"></pre>
                </div>
              </div>
              <div class="space-y-2">
                <span class="text-[10px] font-bold text-gray-400 uppercase">Execution Logs</span>
                <div class="space-y-1">
                  <template x-for="log in inspectedRun?.log">
                    <div class="text-[10px] font-mono p-2 rounded border border-gray-100 flex justify-between items-center">
                      <div>
                        <span :class="log.status === 'success' ? 'text-green-600' : 'text-red-600'" class="font-bold" x-text="log.type.toUpperCase()"></span>:
                        <span class="text-gray-500" x-text="log.nodeId"></span>
                      </div>
                      <span class="text-gray-400" x-text="log.duration + 'ms'"></span>
                    </div>
                  </template>
                </div>
              </div>
            </div>
          </div>
        </div>

        <!-- Webhook Entrypoint Card -->
        <div class="bg-white p-6 rounded-xl border border-gray-200 shadow-sm mb-4">
          <div class="flex items-center justify-between mb-4">
            <h2 class="text-lg font-semibold flex items-center gap-2">
              <i class="ti ti-webhook text-indigo-500"></i> Webhook Entrypoint
            </h2>
            <div class="flex items-center gap-4">
              <div class="flex items-center gap-2">
                <span class="text-[10px] font-bold text-gray-400 uppercase">Await Response</span>
                <button @click="workflow.entrypoint.awaitResponse = !workflow.entrypoint.awaitResponse" 
                        :class="workflow.entrypoint.awaitResponse ? 'bg-indigo-600' : 'bg-gray-200'"
                        class="relative inline-flex h-4 w-8 items-center rounded-full transition-colors">
                  <span :class="workflow.entrypoint.awaitResponse ? 'translate-x-4' : 'translate-x-1'" class="inline-block h-2 w-2 transform rounded-full bg-white transition-transform"></span>
                </button>
              </div>
            </div>
          </div>

          <!-- Test Dataset Display -->
          <template x-if="workflow.testDataset && workflow._id">
            <div class="mb-4 p-3 bg-amber-50 rounded-lg border border-amber-100">
              <div class="flex justify-between items-center mb-2">
                <span class="text-[10px] font-bold text-amber-600 uppercase">Active Test Dataset</span>
                <button @click="testConfig.method = workflow.testDataset.method; testConfig.body = JSON.stringify(workflow.testDataset.body || {}, null, 2); testConfig.query = JSON.stringify(workflow.testDataset.query || {}, null, 2); testConfig.headers = JSON.stringify(workflow.testDataset.headers || {}, null, 2); showTestPanel = true;" 
                        class="text-[10px] font-bold text-amber-700 hover:underline uppercase">Edit Dataset</button>
              </div>
              <div class="grid grid-cols-2 md:grid-cols-3 gap-4 text-[10px] font-mono">
                <div>
                  <span class="text-amber-500 font-bold">Method:</span> <span x-text="workflow.testDataset.method"></span>
                </div>
                <div class="truncate">
                  <span class="text-amber-500 font-bold">Query:</span> <span x-text="JSON.stringify(workflow.testDataset.query)"></span>
                </div>
                <div class="truncate">
                  <span class="text-amber-500 font-bold">Body:</span> <span x-text="JSON.stringify(workflow.testDataset.body)"></span>
                </div>
              </div>
            </div>
          </template>

          <div class="grid grid-cols-1 md:grid-cols-2 gap-4 mb-4">
            <div class="space-y-2">
              <label class="text-[10px] font-bold text-gray-400 uppercase">Allowed Methods</label>
              <div class="flex gap-2">
                <template x-for="m in ['GET', 'POST', 'PUT', 'DELETE']">
                  <button @click="toggleMethod(m)" 
                          :class="workflow.entrypoint.allowedMethods?.includes(m) ? 'bg-indigo-100 text-indigo-700 border-indigo-200' : 'bg-gray-50 text-gray-400 border-gray-100'"
                          class="px-2 py-1 text-[10px] font-bold border rounded uppercase transition-colors" x-text="m"></button>
                </template>
              </div>
            </div>
            <div class="space-y-2">
              <label class="text-[10px] font-bold text-gray-400 uppercase">Authentication</label>
              <div class="flex gap-2">
                <select x-model="workflow.entrypoint.auth.type" class="text-xs border border-gray-100 bg-gray-50 rounded px-2 py-1">
                  <option value="none">None</option>
                  <option value="header">Custom Header</option>
                  <option value="bearer">Bearer Token</option>
                </select>
                <template x-if="workflow.entrypoint.auth.type !== 'none'">
                  <div class="flex gap-1 flex-1">
                    <template x-if="workflow.entrypoint.auth.type === 'header'">
                      <input type="text" x-model="workflow.entrypoint.auth.headerName" placeholder="X-API-Key" class="text-xs border border-gray-100 bg-gray-50 rounded px-2 py-1 flex-1">
                    </template>
                    <input type="password" x-model="workflow.entrypoint.auth.headerValue" placeholder="Secret Value" class="text-xs border border-gray-100 bg-gray-50 rounded px-2 py-1 flex-1">
                  </div>
                </template>
              </div>
            </div>
          </div>

          <div class="flex gap-2">
            <input type="text" readonly :value="getWebhookUrl()" class="flex-1 bg-gray-50 border border-gray-200 rounded-lg px-3 py-2 text-sm font-mono text-gray-600" id="webhook-url">
            <button @click="copyWebhookUrl()" class="p-2 bg-gray-100 hover:bg-gray-200 rounded-lg transition-colors">
              <i class="ti ti-copy"></i>
            </button>
          </div>
        </div>

        <!-- Advanced Test Panel -->
        <div class="bg-slate-900 rounded-xl p-6 mb-8 text-white shadow-xl" x-show="showTestPanel" x-transition>
          <div class="flex justify-between items-center mb-6">
            <h3 class="text-sm font-bold flex items-center gap-2">
              <i class="ti ti-flask text-yellow-400"></i> Advanced Test Runner
            </h3>
            <button @click="showTestPanel = false" class="text-gray-400 hover:text-white"><i class="ti ti-x"></i></button>
          </div>
          
          <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
            <div class="md:col-span-2 space-y-4">
              <div class="flex gap-2">
                <select x-model="testConfig.method" class="bg-slate-800 border-none rounded text-xs p-2">
                  <option>GET</option>
                  <option>POST</option>
                </select>
                <input type="text" :value="getWebhookUrl()" readonly class="bg-slate-800 border-none rounded text-xs p-2 flex-1 text-gray-400 font-mono">
              </div>
              
              <div class="grid grid-cols-2 gap-4">
                <div class="space-y-2">
                  <label class="text-[10px] font-bold text-gray-500 uppercase">Query Params (JSON)</label>
                  <textarea x-model="testConfig.query" class="w-full bg-slate-800 border-none rounded text-xs p-2 font-mono h-24" placeholder='{"id": "123"}'></textarea>
                </div>
                <div class="space-y-2">
                  <label class="text-[10px] font-bold text-gray-500 uppercase">Body Payload (JSON)</label>
                  <textarea x-model="testConfig.body" class="w-full bg-slate-800 border-none rounded text-xs p-2 font-mono h-24" placeholder='{"message": "Hello"}'></textarea>
                </div>
              </div>
            </div>
            
            <div class="bg-slate-800/50 rounded-lg p-4 space-y-4">
              <div class="flex items-center justify-between">
                <span class="text-[10px] font-bold text-gray-500 uppercase">Last Execution</span>
                <span :class="testResult.status === 'completed' ? 'text-green-400' : 'text-red-400'" class="text-[10px] font-bold uppercase" x-text="testResult.status || 'None'"></span>
              </div>
              
              <div class="h-48 overflow-y-auto text-[10px] font-mono space-y-1 text-gray-400" id="test-log">
                <template x-for="log in testResult.log">
                  <div class="border-l-2 border-slate-700 pl-2 py-1">
                    <span :class="log.status === 'success' ? 'text-green-500' : 'text-red-500'" x-text="log.type.toUpperCase()"></span>:
                    <span x-text="log.message || (log.duration + 'ms')"></span>
                  </div>
                </template>
              </div>

              <button @click="runFullTest()" :disabled="testing" class="w-full py-2 bg-indigo-600 hover:bg-indigo-700 rounded text-xs font-bold transition-colors disabled:opacity-50">
                <span x-show="!testing">RUN FULL WORKFLOW</span>
                <span x-show="testing">EXECUTING...</span>
              </button>

              <button @click="runFullTest(true)" :disabled="testing" class="w-full py-2 bg-slate-700 hover:bg-slate-600 rounded text-xs font-bold transition-colors disabled:opacity-50 mt-2">
                <span>SET TEST DATASET ONLY</span>
              </button>
              <p class="text-[9px] text-gray-500 mt-1 text-center italic">Sets dataset in order to test nodes in isolation</p>
            </div>
          </div>
        </div>

        <!-- Nodes Stack -->
        <div class="space-y-0">
          <template x-for="(node, index) in workflow.nodes" :key="node.id">
            <div class="flex flex-col items-center">
              <div class="node-connector"></div>
              <div class="w-full bg-white p-6 rounded-xl border border-gray-200 shadow-sm relative group">
                <!-- Node Header -->
                <div class="flex items-center justify-between mb-4">
                    <div class="flex items-center gap-3">
                    <div :class="getNodeColor(node.type)" class="p-2 rounded-lg text-white relative">
                      <i :class="getNodeIcon(node.type)" class="text-lg"></i>
                      <template x-if="node.testResult">
                        <div class="absolute -top-1 -right-1 w-2.5 h-2.5 bg-green-500 border-2 border-white rounded-full" title="Node has test result"></div>
                      </template>
                    </div>
                    <div>
                      <h3 class="font-bold text-gray-900" x-text="node.type.toUpperCase()"></h3>
                      <div class="flex items-center gap-1">
                        <input type="text" x-model="node.name" @input="validateNodeNames()" placeholder="node_name" 
                               :class="node.nameError ? 'text-red-500 border-red-200 bg-red-50' : 'text-gray-400 border-transparent'"
                               class="text-xs font-mono bg-transparent border rounded px-1 focus:ring-0 p-0 h-4 w-32">
                        <template x-if="node.nameError">
                          <span class="text-[8px] text-red-500 font-bold uppercase" x-text="node.nameError"></span>
                        </template>
                      </div>
                    </div>
                  </div>
                  <div class="flex items-center gap-2">
                    <button @click="testIsolatedNode(node)" 
                            :disabled="!workflow.testDataset"
                            :class="!workflow.testDataset ? 'opacity-30 cursor-not-allowed' : 'hover:text-indigo-600'"
                            class="p-2 text-gray-400 transition-colors" title="Test this node only">
                      <i class="ti ti-flask"></i>
                    </button>
                    <button @click="removeNode(index)" class="text-gray-400 hover:text-red-500">
                      <i class="ti ti-trash"></i>
                    </button>
                  </div>
                </div>

                <!-- Node Config -->
                <div class="space-y-4">
                  <!-- Node Debug Context -->
                  <div class="p-2 bg-blue-50 rounded border border-blue-100 text-[10px] font-mono text-blue-700" x-show="workflow.testDataset">
                    <div class="flex justify-between items-center mb-1">
                      <span class="font-bold uppercase italic opacity-70">Expected Context</span>
                      <i class="ti ti-info-circle"></i>
                    </div>
                    <div class="space-y-2">
                      <div>
                        <span class="text-blue-400 font-bold block mb-1">Context Reference:</span>
                        <div class="space-y-1">
                          <div class="flex flex-col gap-1 bg-blue-100/30 p-1.5 rounded">
                            <div class="flex items-center justify-between text-[9px]">
                              <span class="text-blue-500 font-bold">entrypoint</span>
                            </div>
                            <pre class="text-[8px] text-blue-600/70 truncate" x-text="JSON.stringify(workflow.testDataset || { body: {}, query: {} })"></pre>
                          </div>
                          <template x-for="(prevNode, i) in workflow.nodes.slice(0, index)">
                            <div class="flex items-center justify-between text-[9px] bg-blue-100/30 p-1 rounded">
                              <span class="text-blue-500" x-text="prevNode.name || 'node_' + i"></span>
                              <span class="text-gray-400 italic" x-text="prevNode.type === 'llm' ? '{result: string}' : '{...}'"></span>
                            </div>
                          </template>
                        </div>
                      </div>
                      <div>
                        <span class="text-blue-400 font-bold block mb-1">lastNode (Previous):</span>
                        <pre class="bg-blue-100/50 p-1.5 rounded" x-text="JSON.stringify(index === 0 ? { body: workflow.testDataset?.body || {} } : { result: '...' }, null, 2)"></pre>
                      </div>
                    </div>
                  </div>
                  <!-- LLM Node -->
                  <template x-if="node.type === 'llm'">
                    <div class="space-y-4">
                      <div class="grid grid-cols-1 md:grid-cols-3 gap-2">
                        <div class="space-y-1">
                          <label class="text-[10px] font-bold text-gray-400 uppercase">Provider</label>
                          <input type="text" x-model="node.provider" placeholder="openrouter" class="w-full text-xs border border-gray-100 bg-gray-50 rounded px-2 py-1.5">
                        </div>
                        <div class="space-y-1">
                          <label class="text-[10px] font-bold text-gray-400 uppercase">Model</label>
                          <input type="text" x-model="node.model" placeholder="minimax/minimax-m2.1" class="w-full text-xs border border-gray-100 bg-gray-50 rounded px-2 py-1.5">
                        </div>
                        <div class="space-y-1">
                          <label class="text-[10px] font-bold text-gray-400 uppercase">Temperature (<span x-text="node.temperature || 0.7"></span>)</label>
                          <input type="range" x-model="node.temperature" min="0" max="2" step="0.1" class="w-full">
                        </div>
                      </div>
                      <div class="space-y-2">
                        <label class="text-xs font-semibold text-gray-500 uppercase">System Prompt / Instruction</label>
                        <textarea x-model="node.prompt" class="w-full text-sm border border-gray-200 rounded-lg p-2 focus:ring-indigo-500 h-24" placeholder="Use {{payload.body.x}} or {{lastNode.result}} to reference data..."></textarea>
                      </div>
                    </div>
                  </template>

                  <!-- IF Node -->
                  <template x-if="node.type === 'if'">
                    <div class="space-y-2">
                      <label class="text-xs font-semibold text-gray-500 uppercase">JS Condition</label>
                      <input type="text" x-model="node.condition" class="w-full text-sm font-mono border border-gray-200 rounded-lg p-2" placeholder="context.payload.body.amount > 100">
                    </div>
                  </template>

                  <!-- HTTP Node -->
                  <template x-if="node.type === 'http'">
                    <div class="space-y-4">
                      <div class="grid grid-cols-4 gap-2">
                        <select x-model="node.method" class="text-sm border border-gray-200 rounded-lg p-2">
                          <option>GET</option>
                          <option>POST</option>
                        </select>
                        <input type="text" x-model="node.url" class="col-span-3 text-sm border border-gray-200 rounded-lg p-2" placeholder="https://api.example.com">
                      </div>
                    </div>
                  </template>

                  <!-- EXIT Node -->
                  <template x-if="node.type === 'exit'">
                    <div class="space-y-2">
                      <label class="text-xs font-semibold text-gray-500 uppercase">Response JSON</label>
                      <textarea x-model="node.bodyStr" @input="updateExitBody(node)" class="w-full text-sm font-mono border border-gray-200 rounded-lg p-2 h-24" placeholder='{"success": "{{lastNode.response}}"}'></textarea>
                    </div>
                  </template>

                  <!-- Node Test Output -->
                  <div x-show="node.testOutput" x-transition class="mt-4 p-3 bg-gray-900 rounded-lg">
                    <div class="flex justify-between items-center mb-2">
                      <span class="text-[10px] font-bold text-gray-500 uppercase">Node Output</span>
                      <button @click="node.testOutput = null" class="text-gray-500 hover:text-white text-xs">&times;</button>
                    </div>
                    <pre class="text-[10px] text-green-400 font-mono whitespace-pre-wrap" x-text="JSON.stringify(node.testOutput, null, 2)"></pre>
                  </div>
                </div>
              </div>
            </div>
          </template>

          <!-- Add Node Button -->
          <div class="flex flex-col items-center mt-4">
            <div class="node-connector"></div>
            <div class="flex gap-2">
              <button @click="addNode('llm')" class="p-2 bg-indigo-50 text-indigo-600 rounded-full hover:bg-indigo-100 transition-colors" title="Add LLM Node">
                <i class="ti ti-brain"></i>
              </button>
              <button @click="addNode('if')" class="p-2 bg-yellow-50 text-yellow-600 rounded-full hover:bg-yellow-100 transition-colors" title="Add IF Node">
                <i class="ti ti-git-branch"></i>
              </button>
              <button @click="addNode('http')" class="p-2 bg-blue-50 text-blue-600 rounded-full hover:bg-blue-100 transition-colors" title="Add HTTP Node">
                <i class="ti ti-world"></i>
              </button>
              <button @click="addNode('exit')" class="p-2 bg-red-50 text-red-600 rounded-full hover:bg-red-100 transition-colors" title="Add EXIT Node">
                <i class="ti ti-door-exit"></i>
              </button>
            </div>
          </div>
        </div>
      </div>
    </template>
  </div>

  <script>
    function workflowEditor() {
      const urlParams = new URLSearchParams(window.location.search);
      const workflowIdFromUrl = window.location.pathname.split('/').pop();

      return {
        view: 'list', 
        workflows: [],
        workflow: {
          name: '',
          status: 'inactive',
          entrypoint: { 
            awaitResponse: false, 
            allowedMethods: ['POST', 'GET'],
            auth: { type: 'none', headerName: '', headerValue: '' }
          },
          testDataset: {
            method: 'POST',
            body: { message: 'Hello' },
            query: {},
            headers: {}
          },
          nodes: []
        },
        showTestPanel: false,
        testing: false,
        testConfig: {
          method: 'POST',
          body: '{\n  "message": "Hello"\n}',
          query: '{}',
          headers: '{}'
        },
        testResult: { status: null, log: [], context: null },
        showRuns: false,
        runs: [],
        inspectedRun: null,
        
        async init() {
          await this.loadWorkflows();
          if (workflowIdFromUrl !== 'new' && workflowIdFromUrl.length > 5) {
            const wf = this.workflows.find(w => w._id === workflowIdFromUrl);
            if (wf) this.editWorkflow(wf);
            else {
              const res = await fetch(`/saas/api/workflows/${workflowIdFromUrl}`);
              if (res.ok) this.editWorkflow(await res.json());
            }
          } else if (workflowIdFromUrl === 'new') {
            this.createNew();
          }
        },
        async loadWorkflows() {
          const res = await fetch('/saas/api/workflows');
          this.workflows = await res.json();
        },
        createNew() {
          this.workflow = {
            name: 'New Workflow',
            status: 'inactive',
            entrypoint: { 
              awaitResponse: false, 
              allowedMethods: ['POST', 'GET'],
              auth: { type: 'none', headerName: '', headerValue: '' }
            },
            testDataset: {
              method: 'POST',
              body: { message: 'Hello' },
              query: {},
              headers: {}
            },
            nodes: []
          };
          this.view = 'editor';
        },
        editWorkflow(wf) {
          this.workflow = JSON.parse(JSON.stringify(wf));
          this.showRuns = false;
          this.runs = [];
          this.inspectedRun = null;
          if (!this.workflow.testDataset) {
            this.workflow.testDataset = { method: 'POST', body: { message: 'Hello' }, query: {}, headers: {} };
          }
          if (!this.workflow.entrypoint.auth) {
            this.workflow.entrypoint.auth = { type: 'none', headerName: '', headerValue: ' ' };
          }
          if (!this.workflow.entrypoint.allowedMethods) {
            this.workflow.entrypoint.allowedMethods = ['POST', 'GET'];
          }
          // Prep EXIT nodes for textarea and validate names
          this.workflow.nodes.forEach(n => {
            if (n.type === 'exit') n.bodyStr = JSON.stringify(n.body, null, 2);
            // Initialize testOutput from persisted testResult if available
            n.testOutput = n.testResult || null;
            if (!n.name) n.name = n.outputVar || '';
          });
          this.validateNodeNames();
          this.view = 'editor';
        },
        toggleMethod(m) {
          if (!this.workflow.entrypoint.allowedMethods) this.workflow.entrypoint.allowedMethods = [];
          const idx = this.workflow.entrypoint.allowedMethods.indexOf(m);
          if (idx > -1) this.workflow.entrypoint.allowedMethods.splice(idx, 1);
          else this.workflow.entrypoint.allowedMethods.push(m);
        },
        async deleteWorkflow(id) {
          if (!confirm('Are you sure?')) return;
          await fetch(`/saas/api/workflows/${id}`, { method: 'DELETE' });
          await this.loadWorkflows();
        },
        getWebhookUrl() {
          return `${window.location.origin}/saas/w/${this.workflow._id || 'NEW'}`;
        },
        copyWebhookUrl() {
          navigator.clipboard.writeText(this.getWebhookUrl());
          alert('Copied to clipboard!');
        },
        addNode(type) {
          const name = `node_${this.workflow.nodes.length + 1}`;
          const newNode = {
            id: 'node_' + Date.now(),
            type: type,
            name: name,
            outputVar: name,
            testOutput: null
          };
          if (type === 'llm') {
            newNode.prompt = '';
            newNode.provider = 'openrouter';
            newNode.model = 'minimax/minimax-m2.1';
            newNode.temperature = 0.7;
          }
          if (type === 'if') { newNode.condition = ''; newNode.then = []; newNode.else = []; }
          if (type === 'http') { newNode.method = 'GET'; newNode.url = ''; newNode.headers = {}; newNode.body = {}; }
          if (type === 'exit') { newNode.body = { success: true }; newNode.bodyStr = '{\n  "success": "{{lastNode.response}}"\n}'; }
          
          this.workflow.nodes.push(newNode);
          this.validateNodeNames();
        },
        removeNode(index) {
          this.workflow.nodes.splice(index, 1);
          this.validateNodeNames();
        },
        validateNodeNames() {
          const names = new Set();
          const reserved = ['entrypoint', 'payload', 'nodes', 'lastNode', 'env', 'JSON', 'console'];
          this.workflow.nodes.forEach(node => {
            node.nameError = null;
            if (!node.name) return;
            if (reserved.includes(node.name)) {
              node.nameError = 'Reserved name';
            } else if (names.has(node.name)) {
              node.nameError = 'Duplicate name';
            } else if (!/^[a-zA-Z_][a-zA-Z0-9_]*$/.test(node.name)) {
              node.nameError = 'Invalid characters';
            }
            names.add(node.name);
          });
        },
        updateExitBody(node) {
          try {
            node.body = JSON.parse(node.bodyStr);
          } catch (e) {}
        },
        getNodeIcon(type) {
          return {
            llm: 'ti ti-brain',
            if: 'ti ti-git-branch',
            http: 'ti ti-world',
            exit: 'ti ti-door-exit'
          }[type];
        },
        getNodeColor(type) {
          return {
            llm: 'bg-indigo-500',
            if: 'bg-yellow-500',
            http: 'bg-blue-500',
            exit: 'bg-red-500'
          }[type];
        },
        async saveWorkflow(silent = false) {
          const isNew = !this.workflow._id;
          const method = isNew ? 'POST' : 'PUT';
          const url = isNew ? '/saas/api/workflows' : `/saas/api/workflows/${this.workflow._id}`;
          
          const res = await fetch(url, {
            method,
            headers: { 'Content-Type': 'application/json' },
            body: JSON.stringify(this.workflow)
          });
          
          if (res.ok) {
            const saved = await res.json();
            if (!silent) alert('Workflow saved!');
            await this.loadWorkflows();
            this.editWorkflow(saved);
            if (!silent) history.pushState({}, '', `/saas/admin/workflows/${saved._id}`);
          } else {
            const err = await res.json();
            if (!silent) alert('Error saving: ' + (err.error || err.message));
          }
        },
        async runFullTest(entrypointOnly = false) {
          if (!this.workflow._id) return alert('Save workflow first');
          
          const payload = {
            method: this.testConfig.method,
            body: JSON.parse(this.testConfig.body),
            query: JSON.parse(this.testConfig.query),
            headers: JSON.parse(this.testConfig.headers)
          };

          if (entrypointOnly) {
            this.workflow.testDataset = payload;
            await this.saveWorkflow(true); // Silent save
            this.testResult.context = { payload, nodes: {}, lastNode: null };
            alert('Test dataset updated. You can now test nodes in isolation.');
            return;
          }

          this.testing = true;
          try {
            const res = await fetch(`/saas/api/workflows/${this.workflow._id}/test`, {
              method: 'POST',
              headers: { 'Content-Type': 'application/json' },
              body: JSON.stringify(payload)
            });
            this.testResult = await res.json();
            if (this.showRuns) this.loadRuns();
          } catch (e) {
            alert('Invalid JSON in test config or execution failed');
          } finally {
            this.testing = false;
          }
        },
        async testIsolatedNode(node) {
          if (!this.workflow._id) return alert('Save workflow first');
          
          // Rebuild context from previous nodes' testResults if they exist
          const nodesContext = {};
          let lastResult = null;
          
          this.workflow.nodes.forEach((n, idx) => {
            const nodeIndex = this.workflow.nodes.indexOf(node);
            if (idx < nodeIndex && n.testResult) {
              const standardizedResult = (typeof n.testResult !== 'object' || n.testResult === null) 
                ? { result: n.testResult } 
                : n.testResult;
              
              if (n.name) nodesContext[n.name] = standardizedResult;
              lastResult = standardizedResult;
            }
          });

          const entrypoint = this.workflow.testDataset || { body: {}, query: {}, headers: {}, method: 'POST' };
          
          const context = { 
            entrypoint: entrypoint,
            payload: entrypoint,
            nodes: {}, 
            lastNode: lastResult || { 
              method: entrypoint.method || 'POST',
              body: entrypoint.body || {},
              query: entrypoint.query || {},
              headers: entrypoint.headers || {}
            },
            ...nodesContext
          };

          try {
            const res = await fetch(`/saas/api/workflows/${this.workflow._id}/nodes/${node.id}/test`, {
              method: 'POST',
              headers: { 'Content-Type': 'application/json' },
              body: JSON.stringify({ context })
            });
            const data = await res.json();
            
            // Update node output and persist in local state
            node.testOutput = data.result;
            node.testResult = data.result;
            
            // Persist the context in memory for next node testing
            if (node.type !== 'exit') {
              this.testResult.context = data.context;
            }
          } catch (e) {
            alert('Node test failed: ' + e.message);
          }
        },
        async loadRuns() {
          if (!this.workflow._id) return;
          const res = await fetch(`/saas/api/workflows/${this.workflow._id}/runs`);
          this.runs = await res.json();
        },
        inspectRun(run) {
          this.inspectedRun = run;
        },
        testWorkflow() {
          this.showTestPanel = true;
        }
      }
    }
  </script>
